/* Variables CSS pour des valeurs réutilisables */
:root {
  --avatar-width-small: 40px;
  --avatar-width-large: 56px;
  --avatar-border-radius-circle: 50%;
  --avatar-border-radius-square: 0px;
  --avatar-border-color: white;
  --avatar-border-width: 1px;
  --avatar-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

/* Classe de base pour les avatars */
.avatar {
  width: var(--avatar-width-small);
  border-radius: var(--avatar-border-radius-circle);
}

/* Modificateur pour les avatars larges */
.avatar-large {
  width: var(--avatar-width-large);
}

/* Modificateur pour les avatars avec bordure */
.avatar-bordered {
  box-shadow: var(--avatar-box-shadow);
  border: var(--avatar-border-color) var(--avatar-border-width) solid;
}

/* Modificateur pour les avatars carrés */
.avatar-square {
  border-radius: var(--avatar-border-radius-square);
  box-shadow: var(--avatar-box-shadow);
  border: var(--avatar-border-color) var(--avatar-border-width) solid;
}
